chkconfig squid on
htpasswd -b -c /etc/squid/passwd $squid_user $squid_password
iptables -I INPUT -p tcp --dport 8668 -j ACCEPT
wget https://raw.githubusercontent.com/mrtb007/squid/main/squid.conf
/sbin/service iptables save
rm -r -f /etc/squid/squid.conf
\cp -uf /root/squid.conf /etc/squid/
rm -r -f /root/squid.conf
rm -r -f /root/setup
service squid restart
